<Page x:Class="UroborosApp.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UroborosApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Background="White">
        <Grid VerticalAlignment="Center">
            <Grid Margin="15">
                <StackPanel Width="400">
                    <TextBlock Text="Регистрация"
                               FontSize="25"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               />
                    <TextBlock Text="Имя" 
                               FontSize="16"
                               Margin="0,5,0,5"/>       
                    <TextBox x:Name="RegisterUsername" 
                             Margin="0,0,0,10"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             Padding="5"/>

                    <TextBlock Text="Email" 
                               FontSize="16"
                               Margin="0,5,0,5"/>       
                    <TextBox x:Name="RegisterEmail" 
                             Margin="0,0,0,10"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             Padding="5"/>

                    <TextBlock Text="Пароль" 
                               FontSize="16"
                               Margin="0,5,0,5"/>

                    <PasswordBox x:Name="RegisterPassword" 
                                 Margin="0,0,0,10"
                                 Style="{StaticResource RoundedPasswordBoxStyle}"
                                 Padding="5"/>
                    
                    <TextBlock Text="Повторите пароль" 
                               FontSize="16"
                               Margin="0,0,0,5"/>

                    <PasswordBox x:Name="RepeatingPassword" 
                                 Margin="0,0,0,20"
                                 Style="{StaticResource RoundedPasswordBoxStyle}"
                                 Padding="5"/>

                    <Button Content="Зарегистироваться" 
                            Click="Register_Click"
                            Padding="10"
                            Margin="0,0,0,10"/>

                    <TextBlock Text="Есть аккаунт? " 
                               HorizontalAlignment="Center" >
                        <Hyperlink Click="SwitchToLogin_Click">
                            Войти
                        </Hyperlink>
                    </TextBlock>

                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
