<Page x:Class="UroborosApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UroborosApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <Grid VerticalAlignment="Center">
            <Grid Margin="15">
                <StackPanel Width="400">
                    <TextBlock Text="Вход"
                               FontSize="25"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               />
                    <TextBlock Text="Имя" 
                               FontSize="16"
                               Margin="0,5,0,5"/>
                    <TextBox x:Name="LoginUsername"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             Margin="0,0,0,10"
                             
                             Padding="5"/>

                    <TextBlock Text="Пароль" 
                               FontSize="16"
                               Margin="0,5,0,5"/>

                    <PasswordBox x:Name="LoginPassword"
                                 Style="{StaticResource RoundedPasswordBoxStyle}"
                                 Margin="0,0,0,20"
                                 Padding="5"/>

                    <Button Content="Войти" 
                            Click="Login_Click"
                            Padding="10"
                            Margin="0,0,0,10"/>

                    <TextBlock Text="Ещё нет аккаунта? " 
                               HorizontalAlignment="Center" >
                        <Hyperlink Click="SwitchToRegister_Click">
                            Зарегистрироваться
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
