<UserControl x:Class="UroborosApp.Utils.TimePickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UroborosApp.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="120">
    
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="HoursBox" Width="30" Text="12" TextAlignment="Center"/>
        <TextBlock Text=":" VerticalAlignment="Center" Margin="5,0,5,0"/>
        <TextBox x:Name="MinutesBox" Width="30" Text="00" TextAlignment="Center"/>
    </StackPanel>
    
</UserControl>
