<Window x:Class="UroborosApp.Utils.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UroborosApp.Utils"
        mc:Ignorable="d"
        Title="AddCategoryWindow" Height="300" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название категории:" FontSize="14" />
            <TextBox x:Name="TitleTextBox" FontSize="14" Margin="0,5,0,10" />

            <TextBlock Text="Описание категории:" FontSize="14" />
            <TextBox x:Name="DescriptionTextBox" FontSize="14" Margin="0,5,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Добавить" Click="AddCategory_Click" Width="100" Margin="5" />
                <Button Content="Отмена" Click="Cancel_Click" Width="100" Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
